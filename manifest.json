{
  "manifest_version": 3,
  "name": "Per-Tab Volume Control",
  "version": "1.0.0",
  "description": "Adjust audio volume independently for each browser tab",
  "author": "Brayden",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Volume Control"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["audio-injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
